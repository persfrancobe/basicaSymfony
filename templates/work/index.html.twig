{% block body %}
    <div class="section">
        <div class="container">
            <div class="row">
                <ul class="grid cs-style-2">
                    {% for work in works %}
                        <div class="col-md-4 col-sm-6">
                            <figure>
                                <img src="{{asset('uploads/img/'~work.image)}}" alt="{{work.slug.getContent(app.request.locale)}}">
                                <figcaption>
                                    <h3>{{work.name.getContent(app.request.locale)}}</h3>
                                    <span>{{work.description.getContent(app.request.locale)|slice(0,31)}}</span>
                                    <a href="{{path('app_work_show.'~app.request.locale ,{id:work.id,slug:work.slug})}}">Take a look</a>
                                </figcaption>
                            </figure>
                        </div>
                    {% endfor %}
                </ul>
            </div>
            <ul class="pager">
                {{ dump(route)}}

            </ul>
        </div>
    </div>
{% endblock %}
